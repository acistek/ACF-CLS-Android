<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favorite_group_item_layout"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/favorite_user_remove_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight=".90"
        android:scaleType="center"
        android:orientation="vertical"
        android:onClick="deleteFavoriteUser"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/favorite_user_remove"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:scaleType="center"
            android:src="@drawable/minus"/>

        <TextView
            android:id="@+id/favorite_user_id_remove"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <TextView
            android:id="@+id/favorite_group_name_remove"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:orientation="vertical"
        android:layout_weight=".10">

        <TextView
            android:id="@+id/favorite_user_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".75"
            android:gravity="bottom"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/favorite_user_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:textSize="12sp"
            android:textColor="#000000"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/favorite_user_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />
    </LinearLayout>

    <ImageView
        android:id="@+id/favorite_user_arrow"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_weight=".90"
        android:scaleType="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/right_arrow" />

</LinearLayout>