<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.acistek.cls.SearchActivity">

    <!-- SEARCH -->
    <!-- BEGIN -->

    <LinearLayout
        android:id="@+id/search_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="visible">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="7"
            android:background="#C9C9CE"
            android:orientation="horizontal"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:gravity="center">

            <EditText
                android:id="@+id/search_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_gravity="center"
                android:paddingRight="10dp"
                android:maxLength="30"
                android:digits="abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ.1234567890 "
                android:hint="@string/search_name"
                android:textColorHint="#8E8E93"
                android:textSize="7pt"
                android:background="@drawable/search_textfield" />

            <ImageView
                android:id="@+id/clear_search"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="7dp"
                android:layout_gravity="right|center_vertical"
                android:onClick="clearSearch"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="80"
            android:background="@drawable/search_top_border2"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/welcome_name"
                    android:text="Welcome"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="6pt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <TextView
                    android:id="@+id/search_record_number"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#000000"
                    android:textSize="6pt"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ListView
                    android:id="@+id/search_listview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:choiceMode="singleChoice"
                    android:dividerHeight="1dp"
                    android:divider="#C8C7CC"
                    android:fadeScrollbars="true"
                    android:visibility="gone" />

                <WebView android:id="@+id/webviewgraph"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:fadeScrollbars="true"
                    android:visibility="visible" />

                <ProgressBar android:id="@+id/progressgraph"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/progressBarStyleLarge"
                    android:visibility="gone"/>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:orientation="horizontal"
            android:gravity="bottom">

            <LinearLayout
                android:id="@+id/search_myprofile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/search_top_border"
                android:orientation="vertical"
                android:gravity="center"
                android:onClick="goProfile">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".40"
                    android:paddingTop="5dp"
                    android:src="@drawable/search_myprofile"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".60"
                    android:layout_marginBottom="5dp"
                    android:textSize="6pt"
                    android:gravity="center"
                    android:textColor="#336A90"
                    android:textAllCaps="false"
                    android:text="@string/search_myprofile"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/search_favorites"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/search_top_border"
                android:orientation="vertical"
                android:gravity="center"
                android:onClick="goFavorites">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".40"
                    android:paddingTop="5dp"
                    android:src="@drawable/search_favorites"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".60"
                    android:layout_marginBottom="5dp"
                    android:textSize="6pt"
                    android:gravity="center"
                    android:textColor="#336A90"
                    android:textAllCaps="false"
                    android:text="@string/search_favorites"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/search_notifications"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/search_top_border"
                android:orientation="vertical"
                android:gravity="center"
                android:onClick="goNotification">
                <ImageView
                    android:id="@+id/search_alert_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".40"
                    android:paddingTop="5dp"
                    android:src="@drawable/search_alert"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".60"
                    android:layout_marginBottom="5dp"
                    android:textSize="6pt"
                    android:gravity="center"
                    android:textColor="#336A90"
                    android:textAllCaps="false"
                    android:text="@string/search_notifications"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/search_signout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/search_top_border"
                android:orientation="vertical"
                android:gravity="center"
                android:onClick="goLogout">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".40"
                    android:paddingTop="5dp"
                    android:src="@drawable/search_signout"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".60"
                    android:layout_marginBottom="5dp"
                    android:textSize="6pt"
                    android:gravity="center"
                    android:textColor="#336A90"
                    android:textAllCaps="false"
                    android:text="@string/search_signout"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- END -->
    <!-- SEARCH -->

    <!-- ACF WEB SITE -->
    <!-- BEGIN -->

    <LinearLayout
        android:id="@+id/website_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10" >

            <WebView
                android:id="@+id/acf_website_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ProgressBar android:id="@+id/progresswebsite"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleLarge"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/web_bottom_buttons"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:background="#F8F8F8"
            android:layout_weight="90">

            <LinearLayout
                android:id="@+id/back_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:orientation="vertical"
                android:background="@drawable/search_top_border"
                android:paddingTop="10dp">

                <ImageButton
                    android:id="@+id/web_back_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:src="@drawable/ic_action_back"
                    android:background="@null" />

                <TextView
                    android:id="@+id/back_button_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:textColor="#5d5d5d"
                    android:text="Back"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/refresh_button"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:background="@drawable/search_top_border"
                android:paddingTop="10dp">

                <ImageButton
                    android:id="@+id/web_refresh_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:src="@drawable/ic_action_refresh_gray"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/refresh_button_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:textColor="#5d5d5d"
                    android:text="Refresh"
                    android:gravity="center"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/forward_button"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".3"
                android:orientation="vertical"
                android:background="@drawable/search_top_border"
                android:paddingTop="10dp">

                <ImageButton
                    android:id="@+id/web_forward_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:src="@drawable/ic_action_forward"
                    android:background="@null"/>

                <TextView
                    android:id="@+id/forward_button_label"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="50"
                    android:textColor="#5d5d5d"
                    android:text="Forward"
                    android:gravity="center"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- END -->
    <!-- ACF WEB SITE -->

    <!-- BUILDING ACTIVITY -->
    <!-- START -->

    <LinearLayout
        android:id="@+id/building_activity"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10" >

            <ListView
                android:id="@+id/building_list"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"/>

            <ProgressBar android:id="@+id/progressbuilding"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/progressBarStyleLarge"
                android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/distance_seek_bar"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#336A90"
            android:layout_weight="90">

            <TextView
                android:id="@+id/building_within_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:textColor="#ffffff"
                android:text="@string/building_within_label"
                android:textSize="13sp"
                android:gravity="left|center"
                android:paddingLeft="10dp"/>

            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight=".2"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/distance_miles"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".2"
                android:textSize="13sp"
                android:textColor="#ffffff"
                android:text="@string/max_distance"
                android:gravity="right|center"
                android:paddingRight="10dp"/>

        </LinearLayout>
    </LinearLayout>

    <!-- END -->
    <!-- BUILDING ACTIVITY -->

<!-- As the main content view, the view below consumes the entire
     space available using match_parent in both dimensions. -->
    <FrameLayout android:id="@+id/container" android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         If you're not building against API 17 or higher, use
         android:layout_gravity="left" instead. -->
    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->

    <fragment android:id="@+id/navigation_drawer"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:name="com.acistek.cls.NavigationDrawerFragment"
        tools:layout="@layout/fragment_navigation_drawer" />

</android.support.v4.widget.DrawerLayout>
