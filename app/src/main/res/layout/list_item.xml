<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:orientation="vertical"
        android:layout_weight=".10">

        <!-- Name Label -->

        <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cell_phone_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/name"
                android:layout_marginTop="0dp"
                android:text="@string/cell_title"
                android:textSize="13sp"
                android:layout_weight=".50"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/cell_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight=".20"
                android:textSize="13sp"
                android:layout_marginTop="0dp"
                android:textColor="#000000" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/office_phone_label"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/cell_phone"
                android:layout_marginTop="0dp"
                android:layout_weight=".50"
                android:textSize="13sp"
                android:text="@string/office_title"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/office_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="0dp"
                android:layout_weight=".20"
                android:textSize="13sp"
                android:gravity="left"
                android:textColor="#000000"/>

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/detail_icon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".90"
        android:scaleType="center"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:src="@drawable/right_arrow"/>

</LinearLayout>