<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alert_remove_hold"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <TextView
        android:id="@+id/alert_remove_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/alert_remove_delete"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_delete"
        android:textAllCaps="false"
        android:background="@drawable/alert_button_no_bottom" />
    <Button
        android:id="@+id/alert_remove_cancel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/alert_cancel"
        android:textAllCaps="false"
        android:background="@drawable/alert_button"/>

</LinearLayout>